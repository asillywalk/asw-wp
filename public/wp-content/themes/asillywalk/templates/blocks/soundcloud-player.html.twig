<div class="media-container media-container--soundcloud{% if soundcloud.type == 'playlist' %} media-container--large{% endif %}">
    <iframe
        class="soundcloud"
        width="100%"
        scrolling="no"
        frameborder="no"
        allow="autoplay"
        src="https://w.soundcloud.com/player/?url={{ soundcloud.url | url_encode }}&color=%23{{ soundcloud.color | url_encode }}&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
    ></iframe>
</div>
